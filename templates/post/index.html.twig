{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <h1 class="text-center mb-10 text-3xl title-font text-gray-900">Blogs</h1>
            <div class="flex flex-wrap -m-4">
                {% for post in posts %}
                    <div class="p-4 lg:w-1/3">
                        <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
                            {#                        <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">CATEGORY</h2> #}
                            <h2 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">{{ post.title }}</h2>
                            <p class="leading-relaxed mb-3">
                                {{ post.content|slice(0,150) }}...
                            </p>
                            <a
                                    href="{{ path('post_show', {slug: post.slug}) }}"
                                    class="text-indigo-500 inline-flex items-center">Read More
                                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                                     fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M5 12h14"></path>
                                    <path d="M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                            <div class="text-center mt-2 leading-none flex justify-center absolute bottom-0 left-0 w-full py-4">
                                {{ post.createdAt.format('jS M, Y') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}